SPOOLFLIB_DIR = $(SDIR)/libs/spool/flatfile

SPOOLFLIB = libspoolf$(LIBEXT)

SPOOLFLIB_SRC = \
         sge_flatfile.c \
         sge_flatfile_obj.c \
         sge_spooling_flatfile.c \
         sge_spooling_flatfile_scanner.c

SPOOLFLIB_OBJS = $(SPOOLFLIB_SRC:.c=.o)

SPOOLFLIB_ADD_SRC = \
         read_write_job.c 

SPOOLFLIB_ADD_OBJS = $(SPOOLFLIB_ADD_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
spoolflib: $(SPOOLFLIB)

spoolflib_clean:
		$(RM) $(SPOOLFLIB_OBJS) libspoolf.a libspoolf$(SHAREDEXT)

spoolflib_depend:
		$(DEPEND) -f$(SPOOLFLIB_DIR)/spoolf_dependencies $(SPOOLFLIB_DIR)/*.c

spoolflib_messages:
	@echo Creating $@
	@for i in `ls $(SPOOLFLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libspoolf.a:	$(SPOOLFLIB_OBJS) $(SPOOLFLIB_ADD_OBJS)
	$(AR) $(ARFLAGS) libspoolf.a $(SPOOLFLIB_OBJS) $(SPOOLFLIB_ADD_OBJS)
	$(RANLIB) libspoolf.a

libspoolf$(SHAREDEXT): $(SPOOLFLIB_OBJS) $(SPOOLFLIB_ADD_OBJS) $(SPOOLLIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(COMMLIB) $(COMMLISTSLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libspoolf$(SHAREDEXT) $(SPOOLFLIB_OBJS) $(SPOOLFLIB_ADD_OBJS) -lspool -lsgeobj -lsgeobjd -lcomm -lcull -luti -lrmon $(LIBS) -lcommlists 

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SPOOLFLIB_DIR)/spoolf_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_spooling_flatfile.o: $(SPOOLFLIB_DIR)/sge_spooling_flatfile.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLFLIB_DIR)/sge_spooling_flatfile.c

sge_flatfile.o: $(SPOOLFLIB_DIR)/sge_flatfile.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLFLIB_DIR)/sge_flatfile.c

sge_flatfile_obj.o: $(SPOOLFLIB_DIR)/sge_flatfile_obj.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLFLIB_DIR)/sge_flatfile_obj.c

# do not automatically rebuild the scanner c code
$(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.c: $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.l $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.h
		echo "to rebuild the scanner c file call ./aimk -only-core flatfile_scanner" ;\
      touch $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.c

flatfile_scanner: $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.l $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.h
		$(LEX) $(LEXFLAGS) -i8 -Pspool_ -o$(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.c $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.l

sge_spooling_flatfile_scanner.o: $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.c $(SPOOLFLIB_DIR)/sge_spooling_flatfile.h
		$(CC) $(CFLAGS) $(NOERR_CFLAG) $(SHARED_CFLAGS) -c $(SPOOLFLIB_DIR)/sge_spooling_flatfile_scanner.c

#---------------------------------------------------------------------
# test programs
test_sge_spooling_flatfile: test_sge_spooling_flatfile.o $(SPOOLFLIB) $(SPOOLLIB) $(GDILIB) $(SCHEDLIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB)
	$(CC) $(CFLAGS) -o test_sge_spooling_flatfile $(LFLAGS) test_sge_spooling_flatfile.o $(SPOOLFLIB) $(SPOOLLIB) $(SCHEDLIB) $(GDILIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB) $(LIBS)

test_sge_spooling_flatfile.o: $(SPOOLFLIB_DIR)/test_sge_spooling_flatfile.c
	$(CC) $(CFLAGS) -c $(SPOOLFLIB_DIR)/test_sge_spooling_flatfile.c

test_ff_cl: test_ff_cl.o $(SPOOLFLIB) $(SPOOLLIB) $(CULLLIB) $(RMONLIB) $(UTILIB)
	$(CC) $(CFLAGS) -o test_ff_cl $(LFLAGS) test_ff_cl.o sge_mt_init.o sig_handlers.o $(SPOOLFLIB) $(SPOOLLIB) -lgdi -lsec -ldl -lspoolc -lsgeobjd -lsgeobj $(LIBS) -llck -lsched -lcomm -lcommlists -lcull -luti -lrmon $(LIBS) -lc

test_ff_cl.o: $(SPOOLFLIB_DIR)/test_ff_cl.c $(SPOOLFLIB) $(SPOOLLIB) $(CULLLIB) $(RMONLIB) $(UTILIB)
	$(CC) $(CFLAGS) -c $(SPOOLFLIB_DIR)/test_ff_cl.c
